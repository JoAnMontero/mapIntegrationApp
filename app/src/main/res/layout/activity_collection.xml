<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_collection"
    android:orientation="vertical"
    android:background="@android:color/black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_001"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_002"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_003"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_004"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_005"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMapActivity"
            android:src="@drawable/card_006"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
